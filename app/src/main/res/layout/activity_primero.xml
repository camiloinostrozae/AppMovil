<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".view.PrincipalActivity">

    <Button
        android:id="@+id/listarCampanas"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:background="#fff"
        android:onClick="ListarCampanas"
        android:text="Campañas"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp" />

    <ImageButton
        android:id="@+id/img_btn_hablar"
        android:layout_width="373dp"
        android:layout_height="459dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txtGrabarVoz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-1dp"

        android:background="#00ffffff"
        android:onClick="onClickImgBtnHablar" />

    <TextView
        android:id="@+id/txtGrabarVoz"
        android:layout_width="338dp"
        android:layout_height="0dp"
        android:layout_below="@+id/listarCampanas"
        android:layout_centerHorizontal="true"
        android:phoneNumber="false"
        android:textSize="30dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/listarTramites"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:background="#fff"
        android:onClick="ListarTramites"
        android:text="Trámites"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp" />


</RelativeLayout>